<div class="col">
	<select name="sorting" id="sort_by" class="form-select form-select-sm">
		{% for option in collection.sort_options %}
		{% capture selected %}{% if option.value == collection.sort_by %}selected{% endif %}{% endcapture %}
		<option value="{{ option.value }}" {{selected}}>{{ option.name }}</option>
		{% endfor %}
	</select>
</div>
<div class="col d-flex justify-content-end align-items-center">{{ collection.products_count }} Products</div>