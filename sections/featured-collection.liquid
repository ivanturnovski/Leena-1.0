<div class="container py-4">
	<h2 class="text-center my-3">{{ section.settings.title }}</h2>
	<div class="row">
		{% for product in collections[section.settings.featured_collection].products %}
		{% assign image = product.featured_media.preview_image %}
		<div class="col g-4">
			<div class="card">
				<div class="thumbnails m-3">
					{% if image != blank %}
					<img class="card-img-top" src="{{ image | img_url: '150x' }}" alt="{{ product.title }}">
					{% else %}
					{{ 'image' | placeholder_svg_tag: 'card-img-top' }}
					{% endif %}
				</div>
				<div class="card-body">
					<h5><a href="{{ product.url }}">{{ product.title }}</a></h5>
					<p class="price">{{ product.price | money }}</p>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
{% schema %}
{
"name": "Featured Collection",
"class": "featured-collection-section",
"tag": "section",
"settings": [
{
"type": "collection",
"id": "featured_collection",
"label": "Collection"
},
{
"type": "text",
"id": "title",
"default": "Featured Collection",
"label": "Title"
}
],
"presets": [
{
"category": "Collection",
"name": "Featured Collection"
}
]
}
{% endschema %}