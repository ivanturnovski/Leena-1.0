<footer class="footer-section bg-light py-5 mt-5">
	<div class="container">
		<div class="row row-cols-{{ section.settings.col_num }}">
			{% for block in section.blocks %}
			{% assign item = block.settings %}
			{% if block.type == 'link_list' %}
			<div class="col">
				<div class="">
					<h5>{{ item.title }}</h5>
					{% assign footer_linklist = item.menu %}
					<ul class="list-unstyled text-small">
						{% for link in linklists[footer_linklist].links %}
						<li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
						{% endfor %}
					</ul>
				</div>
			</div>
			{% elsif block.type == "text" %}
			<div class="col">
				<div class="">
					<a href="/"><img src="{{ item.logo | img_url: '200x200' }}" class="mb-4"></a>
					<h5>{{ item.title }}</h5>
					<p>{{ item.description }}</p>
				</div>
			</div>
			{% endif %}
			{% endfor %}
		</div>
	</div>
</footer>

{{ 'bootstrap.min.js' | asset_url | script_tag }}
{{ 'application.js' | asset_url | script_tag }}


{% schema %}
{
"name": "Footer",
"settings": [
{
"type": "range",
"id": "col_num",
"default": 3,
"min": 2,
"max": 4,
"label": "Number of columns"
}
],
"max_blocks": 4,
"blocks": [
{
"type": "link_list",
"name": "Navigation",
"limit": 3,
"settings": [
{
"type": "text",
"id": "title",
"label": "Title",
"default": "Quick Links"
},
{
"type": "link_list",
"id": "menu",
"label": "Menu"
}
]
},
{
"type": "text",
"name": "Store Details",
"limit": 1,
"settings": [
{
"type": "image_picker",
"id": "logo",
"label": "Store Logo"
},
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Store information"
},
{
"type": "richtext",
"id": "description",
"label": "Text"
}
]
}
]
}
{% endschema %}