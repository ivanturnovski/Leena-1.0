<div class="position-relative text-center bg-light p-3 p-md-5">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="display-4">{{ blog.title }}</h1>
    <p class="lead">
      Read our latest publications
    </p>
  </div>
</div>

<div class="container my-5">
  {% paginate blog.articles by 2 %}
  <div class="row row-cols-1 row cols-md-2 row-cols-lg-3 justify-content-center g-3 py-5">
    {% for article in blog.articles %}
    <div class="col">
      <div class="card shadow">
        {% if article.image.src != null %}
        <div class="card-header">
          <img src="{{ article.image.src | img_url: 'medium' }}" alt="{{ article.image.alt }}">
        </div>
        {% else %}
        <div class="card-header">{{ 'image' | placeholder_svg_tag: 'card-img-top' }}</div>
        {% endif %}
        <div class="card-body">
          <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>{{ article.author }} @ {{ article.created_at }}
          {%- if article.excerpt.size > 0 -%}
          <p class="card-text">{{ article.excerpt }}</p>
          {%- else -%}
          <p class="card-text">{{ article.content | strip_html | truncatewords: 100 }}</p>
          {%- endif -%}
        </div>
      </div>
    </div>
    {% endfor %}
  </div>


  {% render 'pagination' , paginate: paginate %}

  {% endpaginate %}
</div>