<div class="position-relative text-center bg-light p-3 p-md-5">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="display-4">{{ blog.title }}</h1>
    <p class="lead">
      Find our how this website is built!
    </p>
  </div>
</div>

<div class="container my-5">
  {% paginate blog.articles by 4 %}
  <div class="row row-cols-1 row cols-md-2 row-cols-lg-3 justify-content-center g-3 py-5">
    {% for article in blog.articles %}
    <div class="col">
      <div class="card shadow">
        {% if article.image.src != null %}
        <a class="p-3" href="{{ article.url }}"><img src="{{ article.image.src | img_url: 'medium' }}"
            alt="{{ article.image.alt }}"></a>
        {% else %}
        <a class="p-3" href="{{ article.url }}">{{ 'image' | placeholder_svg_tag: 'card-img-top' }}</a>
        {% endif %}
        <div class="card-body">
          <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>{{ article.author }} | {{ article.published_at |
          date: format: 'long' }}
          {%- if article.excerpt.size > 0 -%}
          <p class="mb-0">{{ article.excerpt | | truncate: 30, '...'}}</p>
          {% else %}
          <p class="mb-0">&nbsp;</p>
          {%- endif -%}
        </div>
      </div>
    </div>
    {% endfor %}
  </div>


  {% render 'pagination' , paginate: paginate %}

  {% endpaginate %}
</div>