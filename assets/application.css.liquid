html,
body {
}

.inner-hero-section {
	position: relative;
	overflow: hidden;
	width: 100%;
	height: 480px;
}

.inner-hero-section img,
.inner-hero-section svg {
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	z-index: -1;
}
.card {
	align-items: center;
	text-align: center;
	height: 100%;
}
.card-image {
	width: 150px;
}

.card-body {
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
}
.card-body .price {
	margin-top: auto;
}
.thumbnails {
	width: 150px;
	height: 150px;
	display: flex;
	align-items: center;
}
.slick-prev:before,
.slick-next:before {
	color: #3399ff !important;
}
.product-slider-nav {
	margin-top: 30px;
}
